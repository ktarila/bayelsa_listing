{% extends 'landing.html.twig' %}
{% block title %}Buyers and Sellers NG{% endblock %}
{% block body %}
<div class="flex flex-col min-h-screen overflow-hidden">
    <header class="pt-1 w-full">
        <div class="max-w-6xl mx-auto px-5 sm:px-6">
            <div class="flex items-center justify-between">
                
                <nav class="flex flex-grow">
                    <ul class="flex flex-grow justify-end flex-wrap items-center">
                        <li>
                            <a class="font-semibold text-gray-900 dark:text-white px-5 py-3 flex items-center transition duration-150 ease-in-out" href="{{path('app_login')}}" style="outline: none;">Sign in</a>
                        </li>
                        <li><a class="font-semibold text-gray-900 dark:text-white ml-3" href="{{path('app_register')}}" style="outline: none;"><span>Sign up</span></a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <main class="flex-grow">
        <section class="relative">
            <div class="max-w-6xl mx-auto px-4 sm:px-6">
                <div class="pt-32 pb-12 md:pt-40 md:pb-20">
                    <div class="text-center pb-12 md:pb-16">
                        <h1 class="flex flex-wrap text-5xl md:text-6xl font-extrabold leading-tighter tracking-tighter mb-4 dark:text-white flex lg:inline-block">Advertise for free on <span class="mx-auto text-3xl lg:text-5xl py-1 px-3 rounded bg-clip-text text-white bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">Buyers and Sellers NG</span></h1>
                        <div class="max-w-3xl mx-auto mt-20">
                            <p class="text-xl text-gray-600 dark:text-white mb-8">
                                Are you looking to buy or sell a product or service? Click an option.</p>
                            <div class="flex max-w-xs mx-auto sm:max-w-none sm:flex sm:justify-center">
                                <div class="mr-1">
                                    <a class="uppercase font-semibold rounded px-10 py-2 text-3xl lg:text-5xl text-white bg-indigo-600 hover:bg-indigo-700 w-full mb-4 sm:w-auto sm:mb-0" href="{{path('category_index')}}" style="outline: none;"> Buy
                                    </a>
                                </div>
                                <div>
                                    <a class="uppercase font-semibold rounded px-10 py-2 text-3xl lg:text-5xl text-white bg-deep-orange-600 hover:bg-deep-orange-700 w-full sm:w-auto sm:ml-4" href="{{path('category_index')}}" style="outline: none;">Sell</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}