{% set categories = random_categories() %}
<div class="w-full bg-white dark:bg-gray-900 rounded shadow">
    <div class="w-full">
        <h3 class="text-2xl text-white font-bold bg-deep-orange-800 p-3">Category</h3>
        <ul class="flex w-full flex-wrap text-gray-800">
            {% for category in categories %}
            <a class="w-full border-t border-gray-100 dark:border-gray-800 p-3 w-full font-medium hover:text-deep-orange-600" href="{{ path('category_show', {'id': category.id, 'slug': category.slug})}}">
                <li class="text-blue-500 hover:text-deep-orange-500 dark:text-blue-500 cursor-pointer truncate ">
                    {{ category.name }}
                </li>
            </a>
            {% endfor %}
        </ul>
    </div>
</div>