{% set tags = random_tags() %}
<div class="w-full bg-white dark:bg-gray-700 rounded shadow">
            <div class="w-full">
                <h3 class="text-2xl text-white font-bold bg-deep-orange-700 p-3">Tags</h3>
                <ul class="flex w-full flex-wrap text-gray-800">
                    {% for hashtag in tags %}
                    <a class="w-full border-t border-gray-100 dark:border-gray-600 p-3 w-full font-medium hover:text-deep-orange-600" href="{{ path('advert_by_tag', {'tagname': hashtag.getNameWithoutPoundSign})}}">
                    <li class="text-blue-500 hover:text-deep-orange-500 dark:text-blue-300 cursor-pointer truncate ">
                        {{ hashtag.name }}
                    </li>
                    </a>
                    {% endfor %}
                </ul>
            </div>
        </div>