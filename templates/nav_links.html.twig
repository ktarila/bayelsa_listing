<ul class="flex flex-wrap w-full text-md items-center font-medium text-gray-700 dark:text-gray-100 mt-6">
    {% if app.user %}
    <h2 class="text-lg mb-3 ml-3 truncate text-blue-700 dark:text-white">Hi {{ app.user.fullname }}!</h2>
    {% endif %}
    <li class="n-link hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full flex items-center">
        <a href="{{ path("home")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Home</span>
        </a>
    </li>
    {% if app.user %}
    <li class="n-link hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full flex items-center">
        <a href="{{ path("my_ads")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <span>My Ads</span>
        </a>
    </li>
    {% endif %}
    <li class="n-link border-t dark:border-gray-700 mt-10 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full flex items-center">
        <a href="{{ path("sellers")}}" class="p-3 flex items-center w-full">
            <i class="fas fa-store mr-3"></i>
            <span>Sellers</span>
        </a>
    </li>
    <li class="n-link hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full flex items-center">
        <a href="{{ path("buyers")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            <span>Buyers</span>
        </a>
    </li>
    <li class="flex w-full items-center lg:hidden n-link hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer">
        <a href="{{ path("tags")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
        </svg>
        <span>Tags</span>
        </a>
        
    </li>
    {% if app.user %}
    <li class="border-t dark:border-gray-700 mt-20 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full">
        <a href="{{ path("app_logout")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Logout</span>
        </a>
    </li>
    {% else %}
    <li class="border-t dark:border-gray-700 mt-20 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full">
        <a href="{{ path("app_login")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Login</span>
        </a>
    </li>
    {% endif %}
    <li class="dark:border-gray-700 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full p-3 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>FAQs</span>
    </li>
    <li class="dark:border-gray-700 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full p-3 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
        <span>Disclaimer</span>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
    <li class="dark:border-gray-700 hover:bg-deep-orange-600 hover:text-gray-100 cursor-pointer w-full">
        <a href="{{ path("admin")}}" class="p-3 flex items-center w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
        <span>Admin</span>
        </a>
    </li>
    {% endif %}
</ul>