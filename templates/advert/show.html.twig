{% extends 'base.html.twig' %}
{% block title %}{{ advert }}{% endblock %}
{% block body %}
<div class="content flex flex-wrap justify-between">
    <div class="left md:w-3/4 w-full my-2 rounded-t">
        <div class="bg-white dark:bg-gray-600 dark:text-white w-full rounded shadow flex flex-wrap card text-gray-900 mr-3 mb-2">
            <div class="page-title bg-purple-700 dark:bg-gray-700 w-full text-white p-5 rounded-t">
                <div class="w-full">
                    <div class="flex justify-between">
                        <h2 class="w-5/6 text-xl font-bold leading-7 text-gray-100 dark:text-indigo-200 sm:text-3xl">
                            {{ advert.title }}
                        </h2>
                        <div>
                            <div class="inline-block relative z-10">
                                <a onclick="toggleDD('menu-links')" class="w-52 cursor-pointer drop-button text-gray-700 dark:text-gray-100 focus:outline-none text-xs md:text-sm inline-block flex items-center justify-end drop-button">
                                    <span class="no-pointer-event flex bg-purple-800  text-gray-100 px-3 py-2 rounded font-semibold"> <span class="inline-block pr-2"> actions</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="border-l border-purple-400 ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg> <span> </a>
                            </div>
                            <div id="menu-links" role="menu" tabindex="0" class="dropdownlist invisible z-30 absolute w-52 mt-2 origin-top-right bg-white dark:bg-gray-800 dark:border-gray-700 divide-y divide-gray-100 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                                <div class="px-1 py-1" role="none">
                                    <button class="focus:outline-none hover:bg-purple-800 hover:text-white text-gray-900 dark:text-gray-200 group flex rounded-md items-center w-full px-2 py-2 text-sm" role="menuitem" tabindex="-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd" />
                                        </svg>
                                        Report
                                    </button>
                                    <a href="{{path('advert_edit', {'id': advert.id})}}" class="focus:outline-none hover:bg-purple-800 hover:text-white text-gray-900 dark:text-gray-200 group flex rounded-md items-center w-full px-2 py-2 text-sm" role="menuitem" tabindex="-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                                            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                                        </svg>
                                        Edit
                                    </a>
                                    <button class="focus:outline-none hover:bg-purple-800 hover:text-white text-gray-900 dark:text-gray-200 group flex rounded-md items-center w-full px-2 py-2 text-sm" role="menuitem" tabindex="-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                                        </svg>
                                        Bookmark
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-sm font-light flex text-white items-center mb-4 flex-wrap mt-2">
                        <div class="flex mr-5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            {{ advert.fullname}}
                        </div>
                        <div class="flex mr-5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 dark:text-white mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                            </svg>
                            {{advert.lga}}, {{ advert.state}}
                        </div>
                        <div class="flex mr-5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                            <a href="tel:123-456-7890">{{ advert.phone}}</a>
                        </div>
                        <div class="flex">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <a href="tel:123-456-7890">{{ advert.createdAt|ago_date}}</a>
                        </div>
                    </div>
                    <div class="likes flex w-full">
                        <div class="mr-3 flex items-center  text-md text-gray-100 dark:text-white">
                            <span>28 ups</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                            </svg>
                        </div>
                        <div class="flex items-center text-md text-gray-100 dark:text-white">
                            <span>28 downs</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.096c.5 0 .905-.405.905-.904 0-.715.211-1.413.608-2.008L17 13V4m-7 10h2m5-10h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-3 w-full leading-relaxed tracking-wide text-md" style="min-height: 250px">
                {{ advert.description|nl2br}}
            </div>
        </div>
        <div class="comments">
        </div>
    </div>
    <div class="hidden lg:block right w-full md:w-1/5 mt-5 md:mt-2 ">
        {% include 'tag/tags.html.twig' %}
    </div>
</div>
{% endblock %}